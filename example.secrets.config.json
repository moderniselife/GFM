{
  "secrets": [
    {
      "name": "firebase-admin",
      "secretKey": "firebase-admin-key",
      "targetPath": "functions/service-account.json",
      "description": "Firebase Admin SDK service account"
    },
    {
      "name": "app-env",
      "secretKey": "app-env-config",
      "targetPath": ["app/.env.development", "app/src/.env.development"],
      "description": "PWA (Policy Reader) environment variables"
    },
    {
      "name": "public-env",
      "secretKey": "public-env-config",
      "targetPath": ["public/.env.development", "public/src/.env.development"],
      "description": "Public (Admin Portal) environment variables"
    }
  ]
}
