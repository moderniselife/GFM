{
  "name": "firebase-manager-gui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "concurrently \"bun run start-server\" \"bun run start-gui\"",
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start-gui": "bun run dev",
    "start-server": "bun src/server/server.ts",
    "compile": "bun run build && esbuild src/server/server.ts --bundle --outfile=server-bundle.js && pkg .",
    "generate-icons": "bun scripts/generate-icons.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "bin": "server.cjs",
  "pkg": {
    "assets": [
      "dist/**/*",
      "server-bundle.js"
    ],
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ]
  },
  "dependencies": {
    "@chakra-ui/button": "^2.1.0",
    "@chakra-ui/checkbox": "^2.3.2",
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/layout": "^2.3.1",
    "@chakra-ui/react": "^2.8.2",
    "@chakra-ui/select": "^2.1.2",
    "@chakra-ui/toast": "^7.0.2",
    "@codemirror/lang-javascript": "^6.2.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@fingerprintjs/fingerprintjs": "^4.5.1",
    "@google-analytics/data": "^4.11.0",
    "@google-cloud/secret-manager": "^5.6.0",
    "@monaco-editor/react": "4.6.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@saas-ui/theme-glass": "^0.7.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-json-tree": "^0.13.0",
    "@types/ws": "^8.5.13",
    "@uiw/codemirror-theme-dracula": "^4.23.6",
    "@uiw/codemirror-theme-github": "^4.23.6",
    "@uiw/codemirror-theme-vscode": "^4.23.6",
    "@uiw/codemirror-theme-xcode": "^4.23.6",
    "@uiw/react-codemirror": "^4.23.6",
    "chart.js": "^4.4.7",
    "concurrently": "^9.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^13.0.1",
    "install": "^0.13.0",
    "multer": "^1.4.5-lts.1",
    "next-themes": "^0.4.3",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.5",
    "react-grid-layout": "^1.5.0",
    "react-json-tree": "^0.19.0",
    "react-resizable-panels": "^2.1.7",
    "react-window": "^1.8.11",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/react-grid-layout": "^1.3.5",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "babel-jest": "^29.7.0",
    "commander": "^11.1.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "framer-motion": "^10.18.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.4.2",
    "sharp": "^0.33.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.0"
  },
  "trustedDependencies": [
    "protobufjs"
  ]
}
