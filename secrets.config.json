{
  "secrets": [
    {
      "name": "firebase-admin",
      "secretKey": "firebase-admin-key",
      "targetPath": "functions/service-account.json",
      "description": "Firebase Admin SDK service account"
    },
    {
      "name": "app-env",
      "secretKey": "app-env-config",
      "targetPath": ".env",
      "description": "Main application environment variables"
    },
    {
      "name": "staging-env",
      "secretKey": "staging-env-vars",
      "targetPath": "functions/.env.staging",
      "description": "Staging environment variables for functions"
    }
  ]
}